{
  "manifest_version": 3,
  "name": "Gemini Quick Search",
  "version": "1.0",
  "description": "Quick access to Gemini from address bar with 'g'",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://gemini.google.com/*"
  ],
  "omnibox": {
    "keyword": "g"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon_16x16.png",
    "48": "icons/icon_48x48.png",
    "128": "icons/icon_128x128.png"
  }
}
